{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],        
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],          
      "@utils/*": ["utils/*"],          
      "@styles/*": ["styles/*"],        
      "@services/*": ["services/*"],        
    }
  },
  "include": ["src"]
}
